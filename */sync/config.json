{
    "type": "flexible",
    "state": "enabled",
    "development_mode_enabled": false,
    "service_name": "mongodb-atlas",
    "database_name": "pizzaCatz",
    "client_max_offline_days": 30,
    "is_recovery_mode_disabled": false,
    "permissions": {
        "rules": {},
        "defaultRoles": [
            {
                "name": "admin",
                "applyWhen": {
                    "%%user.custom_data.isGlobalAdmin": true
                },
                "read": true,
                "write": true
            },
            {
                "name": "user",
                "applyWhen": {},
                "read": {
                    "owner_id": "%%user.id"
                },
                "write": {
                    "owner_id": "%%user.id"
                }
            }
        ]
    }
}
